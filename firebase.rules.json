{
  "rules": {
    ".read": "auth != null",
    ".write": "root.child('admins/' + auth.uid).exists()",
    "admins": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "settings": {
      ".read": "auth != null",
      ".write": "root.child('admins/' + auth.uid).exists()"
    },
    "drivers": {
      ".read": "auth != null",
      ".write": "root.child('admins/' + auth.uid).exists() || (auth != null && !data.exists())",
      "$driverId": {
        ".write": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())"
      }
    },
    "driverLocations": {
      ".read": "auth != null",
      "$driverId": {
        ".write": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())"
      }
    },
    "completedTrips": {
      ".read": "auth != null",
      "$driverId": {
        ".read": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())",
        ".write": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())"
      }
    },
    "transactions": {
      ".read": "auth != null",
      ".write": "root.child('admins/' + auth.uid).exists()",
      "$driverId": {
        ".read": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())",
        ".write": "auth != null && ($driverId === auth.uid || root.child('admins/' + auth.uid).exists())"
      }
    },
    "trips": {
      ".indexOn": ["status", "driverId", "passengerId", "createdAt"],
      ".read": "auth != null",
      "$tripId": {
        ".write": "auth != null"
      }
    },
    "passengers": {
      "$passengerId": {
        ".read": "auth != null",
        ".write": "auth != null && ($passengerId === auth.uid || root.child('admins/' + auth.uid).exists())"
      }
    },
    "chats": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}