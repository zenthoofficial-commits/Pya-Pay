{
  "rules": {
    ".read": "root.child('admins/' + auth.uid).exists()",
    ".write": "root.child('admins/' + auth.uid).exists()",
    "admins": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "drivers": {
      ".indexOn": ["email"],
      "$driverId": {
        ".read": "auth != null",
        ".write": "auth != null && $driverId === auth.uid || root.child('admins/' + auth.uid).exists()"
      }
    },
    "driverLocations": {
      ".indexOn": ["timestamp"],
      ".read": "auth != null",
      "$driverId": {
        ".write": "auth != null && $driverId === auth.uid || root.child('admins/' + auth.uid).exists()"
      }
    },
    "trips": {
      ".indexOn": ["status", "driverId", "passengerId", "createdAt"],
      ".read": "auth != null",
      "$tripId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "completedTrips": {
      ".read": "auth != null",
      "$driverId": {
        ".read": "auth != null && $driverId === auth.uid || root.child('admins/' + auth.uid).exists()",
        ".write": "auth != null && $driverId === auth.uid || root.child('admins/' + auth.uid).exists()"
      }
    },
    "passengers": {
      "$passengerId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "chats": {
      "$tripId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          ".indexOn": "timestamp"
        }
      }
    },
    "transactions": {
      ".indexOn": ["driverId", "timestamp"],
      ".read": "auth != null",
      ".write": "root.child('admins/' + auth.uid).exists()"
    }
  }
}